{
  "schemaVersion": 1,
  "id": "shvis",
  "version": "${version}",

  "name": "Minecraft Shader Vis",
  "description": "Run GLSL shaders right in your world in real time and explore them",
  "authors": [
    "LIMPIX31"
  ],
  "contact": {
    "homepage": "https://github.com/LIMPIX31/mcsl#readme",
    "sources": "https://github.com/LIMPIX31/mcsl"
  },

  "license": "CC0-1.0",
  "icon": "assets/shvis/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      {
        "adapter": "kotlin",
        "value": "ru.nodium.shvis.ShaderVis"
      }
    ]
  },
  "mixins": [

  ],

  "depends": {
    "fabricloader": ">=0.14.6",
    "fabric": "*",
    "minecraft": "~1.19",
    "java": ">=17",
    "fabric-language-kotlin": ">=1.8.2+kotlin.1.7.10"
  },
  "suggests": {
    "another-mod": "*"
  }
}
